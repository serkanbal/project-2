<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="gameshop.serkanbal.com.gameshop.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <RelativeLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:text="Name"
            android:id="@+id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="17sp"
            android:layout_marginTop="14dp"
            android:text="Company"
            android:id="@+id/detail_company"
            android:layout_below="@id/detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="17sp"
            android:layout_marginTop="14dp"
            android:text="Platform"
            android:id="@+id/detail_platform"
            android:layout_below="@id/detail_name"
            android:layout_toRightOf="@id/detail_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="14dp"
            android:layout_below="@id/detail_platform"
            android:id="@+id/detail_ratingImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:text="Price"
            android:layout_below="@id/detail_ratingImages"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="14dp"
            android:layout_below="@id/detail_ratingImages"
            android:id="@+id/detail_availableIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

        <TextView
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginTop="14dp"
            android:layout_below="@id/detail_ratingImages"
            android:text="  Available"
            android:id="@+id/detail_availableText"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_toRightOf="@+id/detail_availableIcon"
            android:layout_toEndOf="@+id/detail_availableIcon"/>

        <TextView
            android:textSize="12dp"
            android:padding="6dp"
            android:background="@drawable/customborder"
            android:text="+ to Wishlist"
            android:id="@+id/buttonAddToWishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/detail_price"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:layout_marginTop="14dp"
            android:id="@+id/detail_moreInfo"
            android:layout_below="@id/detail_availableIcon"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="@string/more_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="italic"
            android:textSize="15sp"
            android:layout_marginTop="14dp"
            android:text="description"
            android:layout_below="@id/detail_moreInfo"
            android:id="@+id/detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>





    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>


